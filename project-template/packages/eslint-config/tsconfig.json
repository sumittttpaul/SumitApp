{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@packages/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": false,
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src/**/*", "*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
