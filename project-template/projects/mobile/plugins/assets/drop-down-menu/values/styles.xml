<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/custom_menu_background</item>
        <item name="android:windowAnimationStyle">@style/CustomPopupMenuAnimation</item>
        <item name="android:dropDownListViewStyle">@style/CustomDropDownListView</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
    </style>

    <style name="CustomPopupMenuAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="CustomDropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#5D5D5D</item> <item name="android:dividerHeight">1px</item>
    </style>
</resources>