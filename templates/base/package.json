    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "projects/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.6"
}
