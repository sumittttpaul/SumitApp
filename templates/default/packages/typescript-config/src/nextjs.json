{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    "allowJs": true,
    "incremental": true,
    "noEmit": true,
    "plugins": [{ "name": "next" }],

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    "types": ["react", "react-dom", "node"]
  },
  "include": ["src/**/*", "app/**/*", "pages/**/*", "components/**/*", "lib/**/*", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "out", "public", "dist", "build"]
}
