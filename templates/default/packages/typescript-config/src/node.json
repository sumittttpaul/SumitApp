{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "outDir": "./dist",

    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    "types": ["node"]
  },
  "include": ["src/**/*", "api/**/*", "**/*.ts", "**/*.js", "vercel.json"],
  "exclude": ["node_modules", "dist", "build", ".vercel"]
}
