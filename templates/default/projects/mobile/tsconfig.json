{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@packages/typescript-config/expo.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "expo-env.d.ts", ".expo/types/**/*.ts", "nativewind-env.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
