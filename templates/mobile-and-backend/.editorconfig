# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON, YAML, CSS
[*.{js,jsx,ts,tsx,json,jsonc,json5,yaml,yml,css,scss,sass,less}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Vue files
[*.vue]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml,bun.lockb}]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*,*.dockerfile}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_style = space
indent_size = 2

# Python files (if you have any build scripts)
[*.py]
indent_style = space
indent_size = 4

# Go files (if you have any)
[*.go]
indent_style = tab
indent_size = 4

# Makefile (must use tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# XML files
[*.{xml,svg}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2

# Git files
[{.gitignore,.gitattributes,.gitmodules}]
indent_style = space
indent_size = 2

# CI/CD files
[{.github/**,*.yml,*.yaml,.gitlab-ci.yml,azure-pipelines.yml}]
indent_style = space
indent_size = 2

# Windows specific files
[*.{bat,cmd,ps1}]
end_of_line = crlf
indent_style = space
indent_size = 2