{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    "types": ["react", "react-dom", "node"]
  }
}
