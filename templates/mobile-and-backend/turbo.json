{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["NEXT_PUBLIC_*", "EXPO_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "check-types", "lint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**", ".expo/**"],
      "env": ["NEXT_PUBLIC_*", "EXPO_PUBLIC_*", "VERCEL_*"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"],
      "inputs": ["src/**", "*.config.*", "package.json"],
      "outputs": []
    },
    "check-types": {
      "cache": true,
      "dependsOn": ["^check-types"],
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
